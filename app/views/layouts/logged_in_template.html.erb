<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
  </head>

  <body>
    <%= render 'layouts/header' %>
    <%= render 'layouts/flash' %>
    <main class="container py-3">
      <div class='container px-5 px-sm-0'>
         <div class='row'>
            <div class='col-md-3'>
               <h2>User info</h2>
               <table class='table'>
                  <tr>
                     <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" />
                  </tr>
                  <tr>
                     <th>name</th>
                     <th><%= current_user.name %></th>
                  </tr>
                  <tr>
                     <th>introduction</th>
                     <th></th>
                  </tr>
               </table>
               <div class='row'>
                  <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_4542" href="/users/4542/edit"></a>
               </div>
               <h2 class="mt-3">New book</h2>
               <%= form_with model: @book, local: true do |f| %>
               <%= render 'shared/error_messages', object: f.object %>
               <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, class: 'form-control' %>
               </div>
               <div class="form-group">
                  <%= f.label :opinion %>
                  <%= f.text_field :opinion, class: 'form-control' %>
               </div>
               <div class="form-group">
                  <%= f.submit class: 'btn btn-success' %>
               </div>
               <% end %>
            </div>
            <div class='col-md-8 offset-md-1'>
              <%= yield %>
            </div>
         </div>
      </div>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
