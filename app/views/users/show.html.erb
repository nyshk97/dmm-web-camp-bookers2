<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <thead>
     <tr>
     	<th></th>
        <th>Title</th>
        <th colspan="3">Opinion</th>
     </tr>
     <% @books.each do |book| %>
    <tr>
      <td><%= show_thumbnail(book.user, 40, 40) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td colspan="3"><%= book.opinion %></td>
     </tr>
     <% end %>
  </thead>
  <tbody></tbody>
</table>