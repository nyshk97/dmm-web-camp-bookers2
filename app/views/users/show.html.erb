<main>
	<p id="notice"></p>
	<div class='container px-5 px-sm-0'>
		<div class='row'>
			<div class='col-md-3'>
				<h2>User info</h2>
				<table class='table'>
					<tr>
						<img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" />
					</tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th></th>
					</tr>
				</table>
				<div class='row'>
					<a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_4542" href="/users/4542/edit"></a>
				</div>
				<h2 class="mt-3">New book</h2>
				<%= form_with model: @book, local: true do |f| %>
					<div class="form-group">
						<%= f.label :title %>
				  	<%= f.text_field :title, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label :opinion %>
				  	<%= f.text_field :opinion, class: 'form-control' %>
					</div>
					<div class="form-group">
				  	<%= f.submit %>
					</div>
				<% end %>
			</div>
			<div class='col-md-8 offset-md-1'>
				<h2>Books</h2>
				<table class='table table-hover table-inverse'>
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>
	</div>
</main>
